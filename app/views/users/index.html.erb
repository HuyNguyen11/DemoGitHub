<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
<%= link_to(user_path(user)) do %>
  <strong><%= user.name %></strong> -- <span>Check it out!</span>
<% end %>
<td><%= link_to "RSS feed", params.merge(:format => :rss), :class => "feed_link" %></td>
<td><%= link_to 'Show1', user_path(user), :id => 'show' , :class=>'show tip' %></td>
        <td><%= link_to 'Show2', user_path(user), :confirm => 'question?' %></td>
        <td><%= link_to 'Show3', user_path(user , :param1 => '1', :param2 => '2' )%></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     <td><%=   link_to "External link", "http://foo.bar", :target => "_blank" %></td>
     <td><%= link_to "User  Pop Up", user_path(user), :popup => ['dialog name','toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=yes'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

